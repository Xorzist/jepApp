<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Constraintlayoutlogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/bkg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bkg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bkg"
        app:layout_constraintVertical_bias="0.347">

        <EditText
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_grey_24dp"
            android:ems="10"
            android:hint="@string/enter_your_e_mail">

        </EditText>

        <EditText
            android:id="@+id/passwordfield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawableLeft="@drawable/ic_lock_white_24dp"
            android:ems="10"
            android:hint="@string/enter_password"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/loginimg"
            android:layout_width="125dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|fill"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/registerimg"
                android:layout_width="126dp"
                android:layout_height="38dp"
                app:srcCompat="@drawable/registernow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/forgotpassword"
                android:layout_width="180dp"
                android:layout_height="38dp"
                app:srcCompat="@drawable/forgot" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>