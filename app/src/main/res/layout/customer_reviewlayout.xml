<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/title"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/orderreviewtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:hint="@string/enter_a_review_title"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/description"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/orderreviewdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="@string/enter_a_review_description"
        android:inputType="textMultiLine"
        android:maxLength="100"
        android:maxLines="3"
        android:padding="10dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/reviewitemtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/select_review_item_s"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <Spinner
            android:id="@+id/reviewtitlespinner"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/titelbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add" />
    </LinearLayout>

    <TextView
        android:id="@+id/reviewtitlebox"
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="@string/please_add_a_review_topic_from_the_list"
        android:textSize="18sp" />

</LinearLayout>